<!DOCTYPE html>
<html lang="en">
<head>
    <title>Scotbank - Home</title>
    {{> style.hbs}}
</head>
<body>

    {{> navbar.hbs}}

    <div class="full-section">
        <h1>My Profile</h1>
    </div>

    <div class="sub-section">
        <h2>Personal Details</h2>
        <div class="row">
            Full Legal Name
            <div class="small-column">
                {{user.name}}
            </div>
        </div>

        <div class="row">
            Email Address
            <div class="small-column">
                {{user.email}}
            </div>
        </div>

        <div class="row">
            Phone Number
            <div class="small-column">
                01234567890
            </div>
        </div>

        <div class="row">
            Primary Address
            <div class="small-column">
                31 Spooner Street
            </div>
        </div>
    </div>

    <div class="sub-section">
        <h2>Account Details</h2>
        <div class="row">
            Sort Code
            <div class="small-column">
                {{account.sortCode}}
            </div>
        </div>

        <div class="row">
            Account Number
            <div class="small-column">
                {{account.accountNumber}}
            </div>
        </div>

        <div class="buttons">
            <a href="/logout" style="border: #FC5130; color: #FC5130">Logout</a>
        </div>
    </div>

    {{> footer.hbs}}
</body>
</html>

