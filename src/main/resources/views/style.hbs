<meta charset="UTF-8">
<link rel="icon" type="image/x-icon" href="/assets/favicon.ico">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Inter">
<style>
    /* General Formatting */
    body, h1, h2, h3, h4, h5, h6, p, button, a {
        font-family: "Inter", sans-serif;
    }

    body, html {
        margin: 0;
    }

    .full-section {
        background-color: #fff;
        margin: 6em 8em 6em 8em;
    }

    .sub-section {
        background-color: #F2F6F7;
        margin: 3em 1em 3em 1em;
        padding: 5em 8em 5em 8em;
        border-radius: 3.5em;
    }

    .box-section {
        background-color: #fff;
        padding: 3em;
        margin: 1em;
        border-radius: 2em;
        justify-content: center;
        text-align: center;
    }

    h1, a {
        text-align: center;
        color: #0C1722;
        font-size: 3em;
    }

    .banner h1 {
        font-size: 4em;
    }

    h2 {
        color: #0C1722;
    }

    h1, h2, a { font-weight: bold; }

    a {
        text-decoration: none;
        font-size: 14px;
    }

    /* Navigation bar */

    .nav {
        overflow: hidden;
        background-color: #0C1722;
        display: flex;
        align-items: center;
        justify-content: space-between;
        min-height: 10vh;
    }

    .nav::before, .nav::after {
        content: "";
        flex: 1;
    }

    .nav-item, .nav-center {
        display: flex;
        justify-content: center;
        flex: 1;
    }

    .nav-center { flex: none; }

    .nav a {
        text-decoration: none;
        color: white;
        font-size: 18px;
        padding: 1em;
    }

    .nav a:hover { color: #D8FF6E; }

    /* Footer */

    footer {
        background-color: #0C1722;
        padding: 6em 1em 6em 1em;
        text-align: center;
        color: #fff;
        font-weight: normal;
    }

    footer a { color: #fff }

    footer a:hover { color: #D8FF6E }

    /* Home page */

    .banner h1 { color: #D8FF6E; }

    .banner h2 { color: #fff; }

    .banner {
        background-color: #0C1722;
        height: 50vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        margin: 0;
        background-image: url('assets/icon.png');
        background-position: 65% 50%;
        background-size: auto;
        background-repeat: no-repeat;
    }

    /* Overview page */

    .card {
        width: 400px;
        height: 230px;
        background-image: linear-gradient(to right, #00c3ff, #D8FF6E);
        color: white;
        border-radius: 1em;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.25);
        position: relative;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        justify-content: center;
        margin-top: 3em;
        padding: 1em;
    }

    .card h3 { font-weight: bold; }

    .card h3, .card h4, .card h5 {
        font-family: "Inter", sans-serif;
        text-transform: uppercase;
    }

    .card h4 { margin-bottom: 10px; }

    .card h5 { padding: 0 2em 1em 0; }

    .side-by-side { display: flex; }

    .side-by-side .full-section { flex: 1; }

    /* Table */

    .row {
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 0;
        padding: 0.5em 0 0.5em 0;
        border: none;
        border-bottom: 1px solid #708090;
        box-sizing: border-box;
    }

    .row:last-of-type { border: none; }

    .small-column { flex: 1; }

    .large-column { flex: 3; margin: 0.2em; }

    .small-column:last-of-type {
        float: right;
        text-align: right;
    }

    /* Form Formatting */

    .page-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 90vh;
    }

    form {
        width: 100%;
        max-width: 40vw;
        text-align: center;
    }

    label {
        color: #A9A9A9;
        text-align: left;
    }

    input[type=text], input[type=password], input[type=date] {
        width: 100%;
        padding: 12px 0;
        margin: 8px 0;
        display: block;
        border: none;
        border-bottom: 1px solid #A9A9A9;
        box-sizing: border-box;
    }

    input[type=text]:focus, input[type=password]:focus, input[type=date]:focus,
    input[type=text]:not(:placeholder-shown), input[type=password]:not(:placeholder-shown) {
        border-bottom: 1px solid #708090;
    }

    .buttons {
        text-align: center;
        margin-top: 3em;
    }

    input[type=submit], .button-left, .button-right, .buttons .button a {
        padding: 0.5em 1em 0.5em 1em;
        margin: 1em 0;
    }

    .buttons .button {
        border: none;
        background-color: #fff;
    }

    input[type=submit], .buttons .button a{
        border-radius: 1em;
        color: #000;
        font-weight: bold;
        background-color: #D8FF6E;
        border: 1.5px solid #D8FF6E;
    }

    input[type=submit] {
        width: 50%;
    }

    input[type=submit]:hover, .buttons .button a:hover {
        background-color: #fff;
        color: #000;
    }

    .button-left, .button-right {
        border: 1.5px solid #C7F4E3;
        background-color: #fff;
        font-weight: bold;
        color: #000
    }

    .button-left {
        border-bottom-left-radius: 1em;
        border-top-left-radius: 1em;
    }

    .button-right {
        border-bottom-right-radius: 1em;
        border-top-right-radius: 1em;
    }

    #message-container, .announcement-bar {
        text-align: center;
        background-color: #e75136;
        display: flex;
        vertical-align: center;
        color: #fff;
        padding: 0.1em;
        font-weight: bold;
    }

    .announcement-bar {
        background-color: #C7F4E3;
        color: #000;
        display: block;
    }

    #summaryChart {
        min-width: 60vw;
    }

    /*    Dynamic screen size*/

    @media screen and (max-width: 1000px) {
        .full-section {
            margin: 2em 3em 2em 3em;
        }

        .sub-section {
            margin: 1em 0 0 0;
            padding: 3em;
            border-radius: 0;
        }

        form {
            max-width: 60vw;
        }

        .minimise .row {
            flex-direction: column;
        }

        #summaryChart {
            min-width: 100vw;
        }
    }
</style>