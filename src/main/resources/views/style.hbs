<meta charset="UTF-8">
<link rel="icon" type="image/x-icon" href="/assets/favicon.ico">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat">
<style>
    /* General Formatting */
    body, h1, h2, h3, h4, h5, h6, p {font-family: "Lato", sans-serif}
    h1, h2, button, a {font-family: "Montserrat", sans-serif}

    body, html {
        margin: 0;
    }

    .full-section {
        margin: 3em 10em 3em 10em;
    }

    .sub-section {
        background-color: #fafafa;
        padding: 3em 10em 3em 10em;
    }

    h1 {
        text-align: center;
        color: #005EB8;
    }

    h2, a {
        color: #4381BC
    }

    a {
        text-decoration: none;
    }

    .buttons {
        text-align: center;
        margin-top: 20px;
    }

    .buttons .button {
        padding: 10px 20px;
        margin: 1em;
        font-size: 16px;
        border: 2px solid #4CAF50;
        background-color: rgb(0,0,0,0);
        color: #4CAF50;
        cursor: pointer;
        border-radius: 10em;
    }

    .button a {
        color: #4CAF50;
    }

    /* Navigation bar */
    .topnav {
        overflow: hidden;
        background-color: #fafafa;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .topnav a {
        float: left;
        display: block;
        text-align: center;
        padding: 14px 16px;
        text-decoration: none;
        font-size: 17px;
        text-transform: uppercase;
        font-family: "Montserrat", sans-serif;
    }

    .topnav a:hover {
        color: #005EB8;
    }

    .topnav a.active {
        color: #005EB8;
    }

    /* Home page */
    .banner h1, h2 {
        font-weight: bold;
    }

    .banner {
        background-color: #fafafa;
        background-image: url("assets/wallpaper.png");
        height: 40vh;
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center;
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 0;
    }

    .banner-content {
        z-index: 1;
    }

    /* Overview page */

    .card {
        width: 400px;
        height: 230px;
        background-color: #00c3ff;
        background-image: linear-gradient(to right, #00c3ff, #ffff1c);
        color: white;
        border-radius: 24px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.25);
        position: relative;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding: 1em;
    }

    .card h3 {
        font-weight: bold;
    }
    .card h3, .card h4, .card h5 {
        font-family: "Montserrat", sans-serif;
        text-transform: uppercase;
    }

    .card h4 {
        margin-bottom: 10px;
    }
    .card h5 {
        padding: 0 2em 1em 0;
    }

    .side-by-side {
        display: flex;
    }

    .side-by-side .full-section {
        flex: 1;
    }

    /* Transactions */

    .row {
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 0;
        padding: 0.5em 0 0.5em 0;
        border: none;
        border-bottom: 1px solid #A9A9A9;
        box-sizing: border-box;
    }

    .small-column {
        flex: 1;
    }

    .large-column {
        flex: 4;
        margin: 0.2em;
    }

    .small-column:last-of-type {
        float: right;
        text-align: right;
    }

    /* Form Formatting */

    .form-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 80vh;
    }

    form {
        width: 100%;
        max-width: 40vw;
        text-align: center;
    }

    label {
        color: #A9A9A9;
        text-align: left;
    }

    input[type=text], input[type=password], input[type=date] {
        width: 100%;
        padding: 12px 0;
        margin: 8px 0;
        display: block;
        border: none;
        border-bottom: 1px solid #ccc;
        box-sizing: border-box;
    }

    input[type=text]:focus, input[type=password]:focus, input[type=date]:focus,
    input[type=text]:not(:placeholder-shown), input[type=password]:not(:placeholder-shown) {
        border-bottom: 1px solid #708090;
    }

    input[type=submit] {
        width: 70%;
        background-color: #fff;
        text-transform: uppercase;
        padding: 8px 10px;
        margin: 20px 0;
        color: #4CAF50;
        border: 2px solid #4CAF50;
        border-radius: 10em;
    }

    input[type=submit]:hover {
        border: 2px solid #45a049;
        color: #45a049;
    }

    /*    Dynamic screen size*/
    @media screen and (max-width: 600px) {
        .topnav a:not(:first-child) {display: none;}
        .topnav a.icon {
            float: right;
            display: block;
        }
    }

    @media screen and (max-width: 600px) {
        .topnav.responsive {position: relative;}
        .topnav.responsive .icon {
            position: absolute;
            right: 0;
            top: 0;
        }
        .topnav.responsive a {
            float: none;
            display: block;
            text-align: left;
        }
    }
</style>