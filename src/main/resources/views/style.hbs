<meta charset="UTF-8">
<link rel="icon" type="image/x-icon" href="/assets/favicon.ico">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Inter">
<style>
    /* General Formatting */
    body, h1, h2, h3, h4, h5, h6, p, button, a {
        font-family: "Inter", sans-serif;
    }

    body, html {
        margin: 0;
    }

    .scroll-section {
        opacity: 0;
        transition: opacity 1s ease;
    }

    .full-section {
        background-color: #fff;
        margin: 3em 10em 3em 10em;
        padding: 3em 0 3em 0;
    }

    .sub-section {
        background-color: #F2F6F7;
        margin: 3em 1.5em 3em 1.5em;
        padding: 5em 8.5em 5em 8.5em;
        border-radius: 5em;
    }

    h1, a {
        text-align: center;
        color: #005EB8;
    }

    h2 {
        color: #0C1722
    }

    a {
        text-decoration: none;
    }

    /* Navigation bar */
    .topnav {
        overflow: hidden;
        background-color: #0C1722;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 10vh;
    }

    .topnav a {
        float: left;
        display: block;
        text-align: center;
        padding: 14px 16px;
        text-decoration: none;
        color: white;
        font-size: 17px;
        font-weight: bold;
    }

    .topnav a:hover, .topnav a.active {
        color: #D8FF6E;
    }
    footer {
        background-color: #0C1722;
        padding: 0.01em 16px;
        padding-top: 64px;
        padding-bottom: 64px;
        text-align: center;
        color: #fff;
    }
    footer a {
        color: #D8FF6E
    }

    /* Home page */
    .banner h1, h2 {
        font-weight: bold;
    }

    .banner h1 {
        color: #D8FF6E;
    }

    .banner h2 {
        color: #fff;
    }

    .banner {
        background-color: #0C1722;
        height: 50vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        margin: 0;
    }

    /* Overview page */

    .card {
        width: 400px;
        height: 230px;
        background-color: #00c3ff;
        background-image: linear-gradient(to right, #00c3ff, #ffff1c);
        color: white;
        border-radius: 24px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.25);
        position: relative;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        justify-content: center;
        margin-top: 3em;
        padding: 1em;
    }

    .card h3 {
        font-weight: bold;
    }
    .card h3, .card h4, .card h5 {
        font-family: "Inter", sans-serif;
        text-transform: uppercase;
    }

    .card h4 {
        margin-bottom: 10px;
    }
    .card h5 {
        padding: 0 2em 1em 0;
    }

    .side-by-side {
        display: flex;
    }

    .side-by-side .full-section {
        flex: 1;
    }

    /* Table */

    .row {
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 0;
        padding: 0.5em 0 0.5em 0;
        border: none;
        border-bottom: 1px solid #708090;
        box-sizing: border-box;
    }


    .row:last-of-type {
        border: none;
    }

    .small-column {
        flex: 1;
    }

    .large-column {
        flex: 4;
        margin: 0.2em;
    }

    .small-column:last-of-type {
        float: right;
        text-align: right;
    }

    /* Form Formatting */

    .page-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 90vh;
    }

    form {
        width: 100%;
        max-width: 40vw;
        text-align: center;
    }

    label {
        color: #A9A9A9;
        text-align: left;
    }

    input[type=text], input[type=password], input[type=date] {
        width: 100%;
        padding: 12px 0;
        margin: 8px 0;
        display: block;
        border: none;
        border-bottom: 1px solid #ccc;
        box-sizing: border-box;
    }

    input[type=text]:focus, input[type=password]:focus, input[type=date]:focus,
    input[type=text]:not(:placeholder-shown), input[type=password]:not(:placeholder-shown) {
        border-bottom: 1px solid #708090;
    }

    .buttons {
        text-align: center;
        margin-top: 3em;
    }

    input[type=submit], .button-left, .button-right, .buttons .button a {
        padding: 0.5em 1em 0.5em 1em;
        margin: 1em 0;
    }

    .buttons .button {
        border: none;
        background-color: #fff;
    }

    input[type=submit], .buttons .button a{
        border-radius: 1em;
        color: #fff;
        font-weight: bold;
        background-color: #005EB8;
        border: 1.5px solid #005EB8;
    }

    input[type=submit] {
        width: 50%;
    }

    .buttons .button a {
        color: #fff;
    }
    .buttons .button a:hover {
        color: #005EB8;
    }
    input[type=submit]:hover, .buttons .button a:hover {
        background-color: #fff;
        color: #005EB8;

    }

    .button-left, .button-right {
        border: 1.5px solid #005EB8;
        background-color: #fff;
        color: #005EB8
    }

    .button-left {
        border-bottom-left-radius: 1em;
        border-top-left-radius: 1em;
    }

    .button-right {
        border-bottom-right-radius: 1em;
        border-top-right-radius: 1em;
    }

    #message-container, .announcement-bar {
        text-align: center;
        background-color: #e75136;
        display: flex;
        vertical-align: center;
        color: white;
        padding: 0.1em;
        font-weight: bold;
    }

    .announcement-bar {
        background-color: #C7F4E3;
        color: black;
        display: block;
    }


    /*    Dynamic screen size*/
    @media screen and (max-width: 600px) {
        .topnav a:not(:first-child) {display: none;}
        .topnav a.icon {
            float: right;
            display: block;
        }
    }

    @media screen and (max-width: 600px) {
        .topnav.responsive {position: relative;}
        .topnav.responsive .icon {
            position: absolute;
            right: 0;
            top: 0;
        }
        .topnav.responsive a {
            float: none;
            display: block;
            text-align: left;
        }
    }
</style>